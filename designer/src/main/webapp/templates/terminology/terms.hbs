{>bindings}
<div class="col-sm-12 horizontal-stretch">
    <div class="form-horizontal row">
      <div class="row properties-line no-border">
        <div class="properties-label"><label>Terminology</label></div>
        <div class="properties-value"><select class="form-control" id="{{panel_id}}_terminology"></select></div>  
      </div>
    </div>
    <div>
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#{{panel_id}}_termBindings" data-toggle="tab">Terms</a></li>
            <li role="presentation"><a href="#{{panel_id}}_nodeBindings" data-toggle="tab">Nodes</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade active in" id="{{panel_id}}_termBindings">
                <table id="{{panel_id}}_termTable" class="table table-hover">
                    <thead>
                    <tr>
                        <th>Term</th>
                        <th>Binding</th>
                        <th>
                            <button id="{{panel_id}}_newTermBinding" type="button" class="btn btn-sm btn-default pull-right"
                                    title="Add binding">
                                &nbsp;<span class="glyphicon glyphicon-plus"></span>&nbsp;
                            </button>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div role="tabpanel" class="tab-pane fade in" id="{{panel_id}}_nodeBindings">
                <table id="{{panel_id}}_nodeTable" class="table table-hover">
                    <thead>
                    <tr>
                        <th>Term</th>
                        <th>Binding</th>
                        <th>
                            <button id="{{panel_id}}_newNodeBinding" type="button" class="btn btn-sm btn-default pull-right"
                                    title="Add binding">
                                &nbsp;<span class="glyphicon glyphicon-plus"></span>&nbsp;
                            </button>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

