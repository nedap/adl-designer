<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
        xmlns:mvc="http://www.springframework.org/schema/mvc"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd"
        >

    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.StringHttpMessageConverter"/>
            <bean class="org.springframework.http.converter.ByteArrayHttpMessageConverter"/>
            <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                <property name="objectMapper">
                    <bean class="org.openehr.designer.ObjectMapperFactoryBean"/>
                </property>
            </bean>
        </mvc:message-converters>
        <mvc:path-matching suffix-pattern="false"/>
    </mvc:annotation-driven>

    <context:annotation-config/>

    <bean id="wtUser" class="org.openehr.designer.web.UserResourceImpl"/>
    <bean id="wtResource" class="org.openehr.designer.web.RepositoryResourceImpl"/>
    <bean id="wtSupport" class="org.openehr.designer.web.SupportResourceImpl"/>
    <bean id="wtReferenceModel" class="org.openehr.designer.web.ReferenceModelResourceImpl"/>
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass"
                  value="org.springframework.web.servlet.view.JstlView" />
        <property name="prefix" value="/WEB-INF/jsp/" />
        <property name="suffix" value=".jsp" />
    </bean>

</beans>